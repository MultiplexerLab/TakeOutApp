<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/RL_menu_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnFirstBurger">

        <ImageView
            android:id="@+id/IV_burger_menu_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/food_menu_icon" />

        <TextView
            android:id="@+id/foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/IV_burger_menu_pic"
            android:fontFamily="@font/amaranth"
            android:text="XYZ Burger"
            android:textColor="@color/lightblack"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodname"
            android:layout_toRightOf="@id/IV_burger_menu_pic"
            android:fontFamily="@font/amaranth"
            android:text="Rating:"
            android:textColor="@color/lightyellow"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodrate"
            android:layout_toRightOf="@id/IV_burger_menu_pic"
            android:fontFamily="@font/amaranth"
            android:text="Price:"
            android:textColor="@color/lightblack"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/view_icon" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
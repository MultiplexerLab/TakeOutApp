<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RL_menu_item"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/squareshape"
    android:elevation="10dp"
    android:onClick="BtnFirstBurger"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/IV_burger_menu_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/food_menu_icon"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/amaranth"
        android:layout_toRightOf="@id/IV_burger_menu_pic"
        android:text="XYZ Burger"
        android:textColor="@color/lightblack"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/foodrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodname"
        android:layout_toRightOf="@id/IV_burger_menu_pic"
        android:text="Rating:"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/lightyellow"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/foodprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodrate"
        android:fontFamily="@font/amaranth"
        android:layout_toRightOf="@id/IV_burger_menu_pic"
        android:text="Price:"
        android:textColor="@color/lightblack"
        android:textSize="13dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/view_icon" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="140dp"
    android:background="@drawable/squareshape"
    android:orientation="vertical"
    android:id="@+id/RL_menu_item"
    android:onClick="BtnFirstBurger"
    android:layout_margin="10dp"
    android:elevation="10dp">

        <ImageView
            android:id="@+id/IV_burger_menu_pic"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/pic3"/>

        <TextView
            android:layout_below="@+id/IV_burger_menu_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click for Details"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="10dp"/>
</RelativeLayout>
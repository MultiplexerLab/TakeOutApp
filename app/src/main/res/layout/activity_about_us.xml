<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="multiplexer.lab.takeout.ItemActivity.AboutUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_back" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/aboutus"
        android:textSize="15dp"
        android:layout_above="@+id/btn_fbpage"/>

    <Button
        android:id="@+id/btn_fbpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Checkout our Facebook page"
        android:background="@color/colorPrimary"
        android:onClick="btnFbPage"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/lightblack"
        android:drawableLeft="@drawable/fb_icon"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>